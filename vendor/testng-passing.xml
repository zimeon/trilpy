<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Fedora API Specification Test Suite">

  <listeners>
    <listener class-name='org.fcrepo.spec.testsuite.report.HtmlReporter'/>
    <listener class-name="org.fcrepo.spec.testsuite.report.EarlReporter"/>
  </listeners>

  <!--Set console logging with 'verbose' values from 1-10 (10 is most verbose)-->
  <test name="Fedora API Specification Tests -- trilpy regressions" verbose="1">

    <groups>
      <define name="all">
        <include name="MUST"/>
        <include name="SHOULD"/>
        <include name="MAY"/>
        <include name="MUST NOT"/>
        <include name="SHOULD NOT"/>
      </define>
      <define name="must">
        <include name="MUST"/>
      </define>
      <define name="should">
        <include name="SHOULD"/>
      </define>
      <define name="may">
        <include name="MAY"/>
      </define>
      <define name="mustnot">
        <include name="MUST NOT"/>
      </define>
      <define name="shouldnot">
        <include name="SHOULD NOT"/>
      </define>
    </groups>

    <classes>
      <class name="org.fcrepo.spec.testsuite.SetUpSuite"/>
      <class name="org.fcrepo.spec.testsuite.crud.Container">
        <!--Specify methods to 'include' or 'exclude'-->
        <methods>
          <exclude name="ldpcMembershipTriples"/>
          <exclude name="ldpcMinimalContainerTriples"/>
        </methods>
      </class>
      <class name="org.fcrepo.spec.testsuite.crud.Ldpnr"/>
      <class name="org.fcrepo.spec.testsuite.crud.HttpGet">
        <methods>
          <exclude name="additionalValuesForPreferHeader"/> <!-- https://github.com/fcrepo4-labs/Fedora-API-Test-Suite/issues/50 -->
          <exclude name="responsePreferenceAppliedHeader"/> <!-- https://github.com/fcrepo4-labs/Fedora-API-Test-Suite/issues/98 -->
          <exclude name="responseDescribesHeader"/> <!--https://github.com/fcrepo4-labs/Fedora-API-Test-Suite/issues/100-->
        </methods>
      </class>
      <class name="org.fcrepo.spec.testsuite.crud.HttpHead"/>
      <class name="org.fcrepo.spec.testsuite.crud.HttpOptions"/>
      <class name="org.fcrepo.spec.testsuite.crud.HttpPost"/>
      <class name="org.fcrepo.spec.testsuite.crud.HttpPut">
        <methods>
          <exclude name="httpPut"/>
          <exclude name="httpPutUpdateDisallowedTriplesResponse"/>
        </methods>
      </class>
      <class name="org.fcrepo.spec.testsuite.crud.HttpPatch">
        <methods>
          <exclude name="supportPatch"/>
          <exclude name="ldpPatchContentTypeSupport"/>
          <exclude name="serverManagedPropertiesModification"/> <!-- bad test: https://github.com/fcrepo4-labs/Fedora-API-Test-Suite/issues/94-->
          <exclude name="statementNotPersistedResponseBody"/>
          <exclude name="statementNotPersistedConstrainedBy"/>
          <exclude name="disallowChangeResourceType"/>
        </methods>
      </class>
      <class name="org.fcrepo.spec.testsuite.crud.HttpDelete"/>
      <class name="org.fcrepo.spec.testsuite.crud.ExternalBinaryContent">
        <methods>
          <exclude name="putCreateExternalBinaryContent"/>
          <exclude name="putUpdateExternalBinaryContent"/>
          <exclude name="createExternalBinaryContentCheckAccesType"/>
          <exclude name="postCheckUnsupportedMediaType"/>
          <!--exclude name="putCheckUnsupportedMediaType"/-->
          <!--exclude name="checkUnsupportedMediaType"/-->
          <!--exclude name="postCheckHeaders"/-->
          <exclude name="putUpdateCheckHeaders"/>
          <exclude name="getCheckContentLocationHeader"/>
          <exclude name="headCheckContentLocationHeader"/>
          <!--exclude name="respondWantDigestExternalBinaryContent"/-->
          <!--exclude name="respondWantDigestExternalBinaryContentHead"/-->
          <!--exclude name="respondWantDigestTwoSupportedExternalBinaryContent"/-->
          <!--exclude name="respondWantDigestTwoSupportedExternalBinaryContentHead"/-->
          <!--exclude name="respondWantDigestTwoSupportedQvalueNonZeroExternalBinaryContent"/-->
          <!--exclude name="respondWantDigestTwoSupportedQvalueNonZeroExternalBinaryContentHead"/-->
          <!--exclude name="respondWantDigestNonSupportedExternalBinaryContent"/-->
          <!--exclude name="respondWantDigestNonSupportedExternalBinaryContentHead"/-->
        </methods>
      </class>
    </classes>

  </test>

</suite>
